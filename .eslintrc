{
  "extends": [
    "eslint:recommended",
    "plugin:svelte/recommended",
    "plugin:svelte/prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json",
    "extraFileExtensions": [
      ".svelte"
    ]
  },
  "overrides": [
    {
      "files": [
        "*.svelte"
      ],
      "parser": "svelte-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser"
      }
    }
  ],
  "ignorePatterns": [
    "**/build",
    "*.less",
    "*.css",
    "*.cjs",
    "webpack.config.js"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "jest": true
  },
  "rules": {
    "no-unused-vars": "off"
  }
}
